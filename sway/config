# input and output
input 7847:2311:SEMITEK_USB-HID_Gaming_Keyboard {
	xkb_layout us
}
input * {
	accel_profile flat
	pointer_accel 0.1
}
input 1739:32552:MSFT0001:01_06CB:7F28_Touchpad {
	accel_profile adaptive
	dwt enabled
	middle_emulation enabled
	scroll_factor 0.5
	pointer_accel 0
	tap enabled
	natural_scroll enabled
}

bar {
	swaybar_command waybar
}

output DP-2 pos 0 0 res 1920x1080 bg ~/Pictures/gruvw.png fill #FAFAFA
#output DP-2 pos 0 0 res 1920x1080 bg ~/Immagini/wallpapersden.com_mikasa-ackerman_3840x2160.jpg fill #FAFAFA
